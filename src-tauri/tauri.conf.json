{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "PerfMon",
  "version": "1.0.0",
  "identifier": "dev.perfmon.desktop",
  "build": {
    "beforeDevCommand": "npm run dev:client",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "PerfMon - Lighthouse Performance Analytics",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "shortDescription": "Lighthouse Performance Analytics",
    "longDescription": "Instant Lighthouse audits for your web apps. Track performance, accessibility, best practices, and SEO scores.",
    "category": "DeveloperTool",
    "macOS": {
      "minimumSystemVersion": "10.13"
    },
    "windows": {
      "webviewInstallMode": {
        "type": "downloadBootstrapper"
      }
    }
  }
}
